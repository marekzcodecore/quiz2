<h1> New Support request </h1>


<%= @request.errors.full_messages.join(', ') %>


<%= form_for @request do |f| %>
	

	<div>	 
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>

	<div> 
	  <%= f.label :email %>
	  <%= f.text_field :email %>
	</div>

 	 <div>
	
		 <%= f.radio_button :department, 'Sales' %> 
  		 <%= f.label :department, 'Sales', :value => 'Sales' %>
  		 <%= f.radio_button :department, 'Marketing' %>
  		 <%= f.label :department, 'Marketing', :value => 'Marketing' %>
		 <%= f.radio_button :department, 'Technical' %> 
  		 <%= f.label :department, 'Technical', :value => 'Technical' %>

	 </div>	 






	<div> 
	  <%= f.label :message %>
	  <%= f.text_area :message %>
	</div>	
	<p> 
        <%= f.submit 'save' %>
	</p>
<% end %>
